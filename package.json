{
  "name": "check-the-vibes",
  "version": "1.0.0",
  "description": "A simple GitHub repo scanner that assesses for SWE best practices and good teamwork",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "check-the-vibes": "dist/cli.js"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:frontend": "vite build",
    "dev": "tsx src/cli.ts",
    "dev:frontend": "vite",
    "dev:full": "concurrently --names \"API,UI\" --prefix-colors \"blue,green\" \"npm run start:server\" \"npm run dev:frontend\"",
    "start": "node dist/cli.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "start:server": "tsx src/server.ts",
    "precommit:install": "pre-commit install",
    "precommit:run": "pre-commit run --all-files",
    "precommit:update": "pre-commit autoupdate"
  },
  "keywords": [
    "github",
    "pr-analysis",
    "code-review",
    "best-practices",
    "typescript"
  ],
  "author": "Chris Timperley",
  "license": "GPL-3.0",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fastify/cors": "^8.5.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@mui/x-data-grid": "^8.12.1",
    "@octokit/graphql": "^9.0.1",
    "@octokit/rest": "^22.0.0",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "bottleneck": "^2.19.5",
    "commander": "^14.0.1",
    "dotenv": "^17.2.2",
    "fastify": "^4.28.1",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.2.1",
    "vite": "^5.4.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.7.7",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^2.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "tsx": "^4.16.2",
    "typescript": "^5.6.2",
    "vitest": "^2.0.0"
  }
}
